<Window x:Class="xrFpIDserver.Verification"
        x:Name="VerifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xrFpIDserver"
        mc:Ignorable="d"
        Title="Verification"
        Height="500"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Closed="VerificationWindow_Closed"
        Loaded="VerificationWindow_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Prompt GroupBox -->
        <GroupBox Margin="5,0,5,0" VerticalAlignment="Top" Height="60">
            <GroupBox.Header>
                <Label Content="Prompt"/>
            </GroupBox.Header>
            <TextBox Grid.Column="0" VerticalAlignment="Top" Height="24" 
                     TextWrapping="Wrap" Name="promptTextBox" 
                     Text="prompt init" IsReadOnly="True">
            </TextBox>
        </GroupBox>

        <!-- Status Groupbox -->
        <GroupBox Margin="5,55,5,5">
            <GroupBox.Header>
                <Label Content="Status"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Margin="0,0,0,15"
                         Name="statusTextBox" 
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True">
                </TextBox>
                <Label Name="statusLabel"
                       Content="Ready"
                       Margin="0,0,0,-6"
                       Height="26"
                       VerticalAlignment="Bottom">
                </Label>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
